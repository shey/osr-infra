# {{ ansible_managed }}

# Rails Required
SECRET_KEY_BASE="{{ v_secret_key_base }}"
REDIS_URL="redis://localhost:6379/0"
APP_URL="{{ server_name }}"
ASSET_HOST="{{ server_name }}"
DEMO_MODE="false"
RAILS_LOG_TO_STDOUT=true

# background job-y
PROBE_INTERVAL="{{ http_check_job_probe_interval }}"
NEW_USER_SLACK_WEBHOOK_URL="{{ v_new_user_eb_slack_webhook_url }}"

# emails
POSTMARK_API_TOKEN="{{ v_postmark_api_token }}"

# Database Configuration
DATABASE_USERNAME="{{ app_user }}"
DATABASE_PASSWORD="{{ v_app_db_user_password }}"
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Stripe/Payments
STRIPE_PUBLIC_KEY="{{ stripe_publishable_key }}"
STRIPE_SECRET_KEY="{{ v_stripe_secret_key }}"
STRIPE_PRIVATE_KEY="{{ v_stripe_secret_key }}"
STRIPE_SIGNING_SECRET="{{ v_stripe_webhook_signing_secret }}"
